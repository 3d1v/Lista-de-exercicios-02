/* 20) Desenvolva um programa que leia um número inteiro e mostre se ele é PAR ou
ÍMPAR.  */
programa {
  funcao inicio() {
    inteiro numero
    escreva(" informe um numero: ")
    leia(numero)
    se ( numero % 2==0){
      escreva(" o numero é Par") 
      }
      senao 
      escreva(" o numero é impar")


    }
  }
}
